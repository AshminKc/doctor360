<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp">

            <com.example.doctor360.utils.SquareImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/image1"
                android:scaleType="centerCrop"
                android:id="@+id/imageHospital"
                android:background="@color/grey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtHospitalName"
                android:text="Ashmin KC"
                android:textColor="@color/isolation"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtHospitalAddress"
                android:text="Birtamode"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableStart="@drawable/ic_address"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtHospitalPhone"
                android:text="064-420250,9805854242"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableStart="@drawable/ic_mobile"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtHospitalWebsite"
                android:text="www.hospital.com"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableStart="@drawable/ic_globe"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>