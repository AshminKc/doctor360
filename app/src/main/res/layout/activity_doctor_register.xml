<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.PatientRegisterActivity">

        <View
            android:id="@+id/topView1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/twitter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view51"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/wave1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topView1" />


        <TextView
            android:id="@+id/topText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:text="@string/doctor_session"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtDoctorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="@dimen/_12sdp"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="text"
            android:padding="@dimen/_10sdp"
            android:lines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view51"
            />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtDoctorEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="@dimen/_12sdp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@+id/edtDoctorName"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtDoctorMobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_mobile"
            android:drawablePadding="@dimen/_12sdp"
            android:ems="10"
            android:hint="@string/mobile"
            android:inputType="phone"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@+id/edtDoctorEmail"
            />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/spinnerDoctorGender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="@dimen/_12sdp"
            android:ems="10"
            android:hint="@string/gender"
            android:inputType="phone"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@+id/edtDoctorMobile"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/spinnerDoctorQualification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_qualification"
            android:drawablePadding="@dimen/_12sdp"
            android:ems="10"
            android:hint="@string/qualification"
            android:inputType="phone"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@+id/spinnerDoctorGender"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/spinnerDoctorSpecialization"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_specialization"
            android:drawablePadding="@dimen/_12sdp"
            android:ems="10"
            android:hint="@string/specialization"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@+id/spinnerDoctorQualification" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtDoctorPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="@dimen/_12sdp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@+id/spinnerDoctorSpecialization" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtDoctorConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="@dimen/_12sdp"
            android:ems="10"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@+id/edtDoctorPassword" />

        <TextView
            android:id="@+id/doctorDocText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/document"
            android:textColor="@color/isolation"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtDoctorConfirmPassword" />

        <com.example.doctor360.utils.SquareImageView
            android:id="@+id/imageDoctorDoc"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/noimage"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_35sdp"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctorDocText"/>

        <Button
            android:id="@+id/btnClickPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/round_click"
            android:text="@string/click_photo"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageDoctorDoc"
            app:layout_constraintTop_toBottomOf="@+id/edtDoctorConfirmPassword"/>

        <Button
            android:id="@+id/btnUploadPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/round_upload"
            android:text="@string/upload_photo"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageDoctorDoc"
            app:layout_constraintTop_toBottomOf="@+id/btnClickPhoto"/>

        <Button
            android:id="@+id/btnDoctorRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/round_bg"
            android:text="@string/signup"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageDoctorDoc" />


        <TextView
            android:id="@+id/loginHintDoctorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/yes_account"
            android:textColor="@color/facebook"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDoctorRegister"
            android:layout_marginBottom="@dimen/_20sdp"/>


        <TextView
            android:id="@+id/loginDoctorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/signin_as"
            android:textColor="@color/isolation"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/loginHintDoctorText"
            app:layout_constraintTop_toBottomOf="@+id/btnDoctorRegister"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_20sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>